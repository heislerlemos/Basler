<%= stylesheet_link_tag    'contacts', media: 'all', 'data-turbolinks-track': 'reload' %>
<br>
<br>
<div align="center">
<div style="background-color: darkgrey; width: 600px;  height: 500px; " align="center">
<br>
<br>
<small> Envie um email </small>
<%= simple_form_for @contact, :html => {:class => 'form-horizontal'} do |f| %>
<br>
<%= f.input :name, :require => true, :required => true, :input_html => {:style=> 'width: 90%'} %>
<br>
<%= f.input :email, :require => true, :required => true, :input_html => { :style=> 'width: 90%;'} %>
<br>
<%= f.input :message, :as => :text, :required => true, :input_html => {:rows => 9, :style => 'width: 500px;'} %>
<div>
</br>
<%= f.button :submit, 	"Envie o email", :class => "btn btn-primary" %>
</div>
<% end %>
</div>
</div>